@page "/"

<PageTitle>Moogle!</PageTitle>

<h1>🔍 Moogle!</h1>

<input class="p-1 my-4" @bind="query" placeholder="Introduzca su búsqueda">

<button type="default" class="btn btn-primary" @onclick="RunQuery">🔍 Buscar</button>

@if (!string.IsNullOrEmpty(result.Suggestion))
{
    <div class="suggestion">
    @if (result.Suggestion == Moogle.INVALID_QUERY)
        {
            <p>🧐 <strong>@result.Suggestion</strong></p>
        }
        else
        {
            <p>🤔 ¿Quisite decir <strong><a href="#">@result.Suggestion</a></strong>?</p>
        }
    </div>
}

<ol class="results">
    @foreach (var item in result.Items())
    {
        <li>
            <div class="item">
                <p class="title" style="background-color: rgba(168, 200, 221, 0.479);">@item.Title</p>
                <p>... @item.Snippet ...</p>
            </div>
        </li>
    }
</ol>

@code {
    private bool moogleStarted = Moogle.MOOGLE_LOADING;

    private string query = "";
    private SearchResult result = new SearchResult();

    private void RunQuery()
    {
        result = Moogle.Query(query);
    }
}
